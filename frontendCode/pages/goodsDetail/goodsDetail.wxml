<!--pages/goodsDetail/goodsDetail.wxml-->
<!-- 顶部抬头 -->
<cu-custom bgColor="bg-gradual-orange" isCustom="{{true}}">
  <view slot="content">宝贝详情</view>
</cu-custom>

<!-- 商品轮播图 -->
<swiper class="screen-swiper square-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
  <swiper-item wx:for="{{goods_details.goods_gallery_urls}}" wx:key>
    <image src="{{item}}" mode="aspectFill"></image>
    <video src="{{item}}" autoplay loop muted show-play-btn="{{true}}" controls="{{true}}" objectFit="cover"></video>
  </swiper-item>
</swiper>

<!-- 商品内容 -->
<van-panel>
  <view slot="header">
    <!-- 现价 原价    销量 -->
    <view class=" cf padding-5">
      <view class=" fl padding-sm">
        <van-tag mark type="danger">优惠价</van-tag>
        <text class="text-price text-red text-xl text-bold padding-left-5">{{goods_details.min_group_price/100}}</text>
        <text class=" text-sm text-grey padding-left-5">原价</text>
        <text class="text-price text-grey text-sm">{{goods_details.min_normal_price/100}}</text>
      </view>
      <view class="  fr padding-sm text-grey text-sm">已售{{goods_details.sales_tip}}件</view>
    </view>
  </view>
  <!-- 商品名称 -->
  <view class="padding-5">
    <text class=" text-black text-bold ">{{goods_details.goods_name}}</text>
    <van-tag mark type="danger" class="padding-left-5">{{serviceTagName[goods_details.service_tags[0]]}}</van-tag>
  </view>

  <!-- 优惠券 -->
  <view class="padding-5">
    <swatoothBor coupon-discount="{{goods_details.coupon_discount}}" coupon-remain-quantity='{{goods_details.coupon_remain_quantity}}' coupon-total-quantity='{{goods_details.coupon_total_quantity}}' coupon-start-time='{{goods_details.coupon_start_time}}'
      coupon-end-time='{{goods_details.coupon_end_time}}' bindtap='takeCoupons' />
  </view>

  <!-- 服务 -->
  <view class="padding-5">
    <text class="text-grey text-sm" wx:for="{{goods_details.service_tags}}"> * {{serviceTagName[item]}}</text>
  </view>

  <!-- 商品详情 -->
  <view class="">
    <van-cell title="店铺名称" icon="shop-o" label="{{goods_details.mall_name}}" />
    <van-cell title="商品分类" icon="send-gift-o" label="{{goods_details.category_name}}" />
    <van-cell title="商品描述" icon="more-o" label="{{goods_details.goods_desc}}" />
  </view>
</van-panel>


<!-- 底部导航栏 -->
<van-goods-action>
  <van-goods-action-icon icon="like{{goods_collect?'':'-o'}}" icon-class="{{goods_collect?'text-red':''}}" text-class="{{goods_collect?'text-red':''}}" text="收藏" bind:click="goodsCollection" />
  <van-goods-action-button text="分享赚({{goods_details.promotion_rate*(goods_details.min_group_price - goods_details.coupon_discount)/100/1000}}元)" type="warning" open-type="share" />
  <van-goods-action-button text="领券买(省{{goods_details.promotion_rate*(goods_details.min_group_price - goods_details.coupon_discount)/100/1000}}元)" bind:click="takeCoupons" />
</van-goods-action>


<van-dialog use-slot show="{{ van_dialog_show }}">
  <view class="flex-sub text-center">
      <view class="solid-bottom text-xsl padding">
        <text class=" cuIcon-likefill text-red"></text>
      </view>
      <view class="padding">{{van_dialog_text}}</view>
    </view>
</van-dialog>